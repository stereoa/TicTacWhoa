@page "/tictactoe"
@using TicTacWhoa.Services
@inject GameLogic GameLogic
@inject IJSRuntime JSRuntime

<h3>Level @GameLogic.CurrentLevelNumber - @GameLogic.CurrentLevelConfig.Rule</h3>

<div class="game-info">
    <div class="status-bar">
        <span>Turn: @GameLogic.CurrentPlayer.Name (@GameLogic.CurrentPlayer.Symbol)</span>
        @if (GameLogic.CurrentLevelConfig.TurnTimeLimit.HasValue)
        {
            <span class="timer @(GameLogic.TimeRemaining < 1 ? "danger" : "")">
                Time: @GameLogic.TimeRemaining.ToString("0.0")s
            </span>
        }
    </div>
</div>

@if (GameLogic.GameOver)
{
    var message = !string.IsNullOrEmpty(GameLogic.GameOverReason) ? GameLogic.GameOverReason : (GameLogic.Winner != null ?
    $"{GameLogic.Winner.Name} Wins!" : "Draw!");
    <div class="alert alert-info winner-container">
        @message
        @if (GameLogic.Winner?.IsHuman == true)
        {
            <button class="btn btn-success" @onclick="NextLevel">Next Level</button>
        }
        else
        {
            <button class="btn btn-primary" @onclick="RestartGame">Try Again</button>
        }
    </div>
}

<div class="board" style="--grid-size: @GameLogic.CurrentLevelConfig.GridSize">
    @for (int i = 0; i < GameLogic.Board.Length; i++)
    {
        var localIndex = i;
        var isFilled = GameLogic.Board[i] != -1;
        <div class="cell @(isFilled ? "filled" : "")" @onclick="() => MakeMove(localIndex)">
            @GetPlayerSymbol(GameLogic.Board[i])
        </div>
    }
</div>

@code {
    private bool _confettiPlayed;

    protected override void OnInitialized()
    {
        GameLogic.OnStateChanged += HandleStateChange;
        GameLogic.NewGame();
    }

    private void HandleStateChange()
    {
        if (!GameLogic.GameOver)
        {
            _confettiPlayed = false;
        }

        if (GameLogic.GameOver && GameLogic.Winner?.IsHuman == true && !_confettiPlayed)
        {
            _confettiPlayed = true;
            _ = JSRuntime.InvokeVoidAsync("startConfetti");
        }

        StateHasChanged();
    }

    private async Task MakeMove(int index)
    {
        await GameLogic.MakeMove(index);
    }

    private void RestartGame()
    {
        _confettiPlayed = false;
        GameLogic.NewGame();
    }

    private void NextLevel()
    {
        _confettiPlayed = false;
        GameLogic.NewGame(GameLogic.CurrentLevelNumber + 1);
    }

    private string GetPlayerSymbol(int playerIndex)
    {
        if (playerIndex == -1) return "";
        if (playerIndex >= 0 && playerIndex < GameLogic.Players.Length)
        {
            return GameLogic.Players[playerIndex].Symbol;
        }
        return "?";
    }

    public void Dispose()
    {
        GameLogic.OnStateChanged -= HandleStateChange;
    }
}
